<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.EnglishFragment">

    <TextView
        android:textAlignment="center"
        android:padding="@dimen/dimen_mediums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_en_to_in"
        android:textSize="@dimen/dimen_font_title"
        android:textColor="@color/colorTextWhite"
        android:background="@color/colorEnglish"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerViewEnglish"
        android:paddingTop="@dimen/dimen_mediums"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.MainActivity"
        tools:listitem="@layout/content_list_dictionary"
        tools:showIn="@layout/app_bar_main"
        android:background="@color/colorBackground"/>

</LinearLayout>